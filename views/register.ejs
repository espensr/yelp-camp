<% include ./partials/header %>

<div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div class="form">
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="newUsername">Username</label>
                <input required autofocus class="form-control" type="text" name="username" id="newUsername" placeholder="your username">
            </div>
            <div class="form-group">
                <label for="newPassword">Password</label>
                <input required class="form-control" type="password" name="password" id="newPassword" placeholder="your password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
            </div>
        </form>
        <a class="backLink">Go Back</a>
        <p class="redirectLink"><span>Already have a user? </span><a href="/login">Login</a></p>
    </div>
</div>

<% include ./partials/footer %>