<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div class="form">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="editName">Name</label>
                <input required autofocus class="form-control" type="text" name="campground[name]" id="editName" placeholder="Camp Everest" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="editPrice">Price (USD/night)</label>
                <input required class="form-control" type="number" name="campground[price]" id="editPrice" placeholder="2.49" value="<%= campground.price %>" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <label for="editImage">Image</label>
                <input required class="form-control" type="text" name="campground[image]" id="editImage" placeholder="https://example.com/photo.jpg" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <label for="editDescription">Description</label>
                <textarea required class="form-control" name="campground[description]" id="editDescription" placeholder="write a description here.."><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <label for="editLocation">Location</label>
                <input required class="form-control" type="text" name="location" id="editLocation" placeholder="Yosemite National Park, CA" value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a class="backLink">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>