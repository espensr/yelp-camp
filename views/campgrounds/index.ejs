<%- include('../partials/header') %>

<header class="jumbotron">
  <div class="container">
    <h1 class="centerText">
      Welcome to YelpCamp! <i class="fas fa-campground"></i>
    </h1>
    <p class="centerText">
      <em
        >View our gallery of campgrounds from all over the world. By signing up
        you can also add your own favorites!</em
      >
    </p>
    <a class="btn btn-primary btn-lg centerButtonLeft" href="/campgrounds/new"
      >Add New Campground</a
    >
  </div>
</header>

<div class="row text-center" id="imageGrid">
  <% for (let i = campgrounds.length - 1; i >= 0 ; i--) { %>
  <div class="col-md-3 col-sm-6">
    <div class="thumbnail">
      <img src="<%= campgrounds[i].image %>" alt="campground image" />
      <div class="caption">
        <h4><%= campgrounds[i].name %></h4>
      </div>
      <p>
        <a
          href="/campgrounds/<%= campgrounds[i]._id %>"
          class="btn btn-primary"
        >
          More Info
        </a>
      </p>
    </div>
  </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
